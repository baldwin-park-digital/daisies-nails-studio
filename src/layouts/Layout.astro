---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import AnalyticsTracker from "../components/AnalyticsTracker.astro";
import ConsentBanner from "../components/ConsentBanner.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const defaultTitle = "Daisies Nails Studio | Nail Art & Spa in YDS";
const defaultDescription = "Experience beautiful nail art, manicures, and spa treatments at Daisies Nails Studio. Located in YDS, we offer expert nail care, relaxing ambiance, and top-rated service.";
const { title, description } = Astro.props;
const pageTitle = title ?? defaultTitle;
const pageDescription = description ?? defaultDescription;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <script is:inline>
      // Apply theme from localStorage or system preference immediately to prevent flash
      let theme = localStorage.getItem("theme");
      if (!theme) {
        theme = window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      }
      document.documentElement.setAttribute("data-theme", theme);
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-T9WL5S8Z");
    </script>

    <script is:inline>
      // Dynamically load GA script client-side
      const gaScript = document.createElement("script");
      gaScript.src =
        "https://www.googletagmanager.com/gtag/js?id=G-0EH179JZSE ";
      gaScript.async = true;
      gaScript.onload = function () {
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          window.dataLayer.push(arguments);
        }
        window.gtag = gtag;
        // Helper to get consent cookie
        function getCookie(name) {
          const value = `; ${document.cookie}`;
          const parts = value.split(`; ${name}=`);
          if (parts.length === 2) {
            const part = parts.pop();
            if (part !== undefined) {
              return part.split(";").shift();
            }
          }
          return null;
        }
        // Always set default as denied first
        gtag("consent", "default", {
          ad_storage: "denied",
          analytics_storage: "denied",
          ad_user_data: "denied",
          ad_personalization: "denied",
        });
        // Then check cookie and send update if needed
        const consent = getCookie("daisies_analytics_consent");
        if (consent === "yes") {
          gtag("consent", "update", {
            ad_storage: "granted",
            analytics_storage: "granted",
            ad_user_data: "granted",
            ad_personalization: "granted",
          });
          console.log("GA: consent granted from cookie");
        } else if (consent === "no") {
          console.log("GA: consent denied from cookie");
        } else {
          console.log("GA: consent default denied");
        }
        gtag("js", new Date());
        gtag("config", "G-0EH179JZSE ");
        console.log("GA script loaded and gtag initialized");
      };
      document.head.appendChild(gaScript);
    </script>
  </head>
  <body class="surface text-on-surface font-montserrat">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-T9WL5S8Z"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Nav />
    <main class="max-w-6xl mx-auto px-6 md:px-2 py-8">
      <slot />
    </main>
    <Footer />
    <AnalyticsTracker />
    <ConsentBanner />
  </body>
</html>
