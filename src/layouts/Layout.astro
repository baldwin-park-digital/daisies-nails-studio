---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import AnalyticsTracker from "../components/AnalyticsTracker.astro";
import ConsentBanner from "../components/ConsentBanner.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Welcome to our static site" } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "Daisies Nails Studio"}</title>
    <script is:inline>
      // Apply theme from localStorage or system preference immediately to prevent flash
      let theme = localStorage.getItem("theme");
      if (!theme) {
        theme = window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      }
      document.documentElement.setAttribute("data-theme", theme);
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet"
      />
    </noscript>
    <!-- Google Analytics will be loaded after consent -->
  </head>
  <body class="surface text-on-surface font-montserrat">
    <Nav />
    <main class="max-w-6xl mx-auto px-6 md:px-2 py-8">
      <slot />
    </main>
    <Footer />
    <AnalyticsTracker />
    <ConsentBanner />
  </body>
</html>
