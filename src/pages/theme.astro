---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Theme Showcase"
  description="Visual theme and color palette reference"
>
  <div class="mb-12">
    <h1 class="text-4xl font-bold text-primary mb-2">Theme Showcase</h1>
    <p class="text-on-surface-dim">
      Visual reference for all theme colors and components
    </p>
  </div>

  <!-- Color Palette Section -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-primary mb-8">Color Palette</h2>

    <!-- Primary Colors -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">
        Primary Colors
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="space-y-2">
          <div class="w-full h-24 bg-primary rounded-lg border-2 border-border">
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">--color-primary</p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-primary"
            >
              #00d4ff
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-primary-hover rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-primary-hover
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-primary-hover"
            >
              #00a8cc
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-primary-active rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-primary-active
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-primary-active"
            >
              #0099cc
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-on-primary rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-on-primary
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-on-primary"
            >
              #1a1a2e
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Secondary Colors -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">
        Secondary Colors
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-secondary rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-secondary
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-secondary"
            >
              #667eea
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-secondary-hover rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-secondary-hover
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-secondary-hover"
            >
              #5568d3
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-secondary-active rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-secondary-active
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-secondary-active"
            >
              #4c51bf
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-on-secondary rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-on-secondary
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-on-secondary"
            >
              #ffffff
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Surface Colors -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">
        Surface Colors
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="space-y-2">
          <div class="w-full h-24 bg-surface rounded-lg border-2 border-border">
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">--color-surface</p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-surface"
            >
              #1a1a2e
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-surface-dim rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-surface-dim
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-surface-dim"
            >
              #16213e
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div
            class="w-full h-24 bg-surface-bright rounded-lg border-2 border-border"
          >
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">
              --color-surface-bright
            </p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-surface-bright"
            >
              #0f3460
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Semantic Colors -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">
        Semantic Colors
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="space-y-2">
          <div class="w-full h-24 bg-error rounded-lg border-2 border-border">
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">--color-error</p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-error"
            >
              #ff4757
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div class="w-full h-24 bg-success rounded-lg border-2 border-border">
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">--color-success</p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-success"
            >
              #2ed573
            </p>
          </div>
        </div>
        <div class="space-y-2">
          <div class="w-full h-24 bg-warning rounded-lg border-2 border-border">
          </div>
          <div>
            <p class="font-mono text-sm text-on-surface-dim">--color-warning</p>
            <p
              class="font-mono text-xs text-on-surface-dim color-value"
              data-var="--color-warning"
            >
              #ffa502
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Components Section -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-primary mb-8">Components</h2>

    <!-- Buttons -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">Buttons</h3>
      <div class="flex flex-wrap gap-4">
        <button class="button-primary">Primary Button</button>
        <button class="button-secondary">Secondary Button</button>
        <button class="button-outline">Outline Button</button>
        <button class="button-action">Action Button</button>
      </div>
    </div>

    <!-- Cards -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">Cards</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="card">
          <h4 class="text-lg font-semibold text-primary mt-0">Card Default</h4>
          <p class="text-on-surface-dim">
            This is a standard card component with border and hover effects.
          </p>
        </div>
        <div class="card-elevated">
          <h4 class="text-lg font-semibold text-primary mt-0">Card Elevated</h4>
          <p class="text-on-surface-dim">
            This is an elevated card with shadow for better depth.
          </p>
        </div>
        <div class="card">
          <h4 class="text-lg font-semibold text-secondary mt-0">
            Card Secondary
          </h4>
          <p class="text-on-surface-dim">
            Cards work great with any color variable.
          </p>
        </div>
      </div>
    </div>

    <!-- Typography -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">Typography</h3>
      <div class="space-y-4">
        <div>
          <p class="text-xs text-on-surface-dim uppercase tracking-wide">
            Small Label
          </p>
          <p class="text-sm text-on-surface">
            Small text for secondary information
          </p>
        </div>
        <div>
          <p class="text-xs text-on-surface-dim uppercase tracking-wide">
            Body Text
          </p>
          <p class="text-base text-on-surface">
            This is body text used for regular content paragraphs
          </p>
        </div>
        <div>
          <p class="text-xs text-on-surface-dim uppercase tracking-wide">
            Large Text
          </p>
          <p class="text-lg text-on-surface">
            Large text for emphasis and section introductions
          </p>
        </div>
      </div>
    </div>

    <!-- Borders & Dividers -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold text-on-surface mb-6">
        Borders & Dividers
      </h3>
      <div class="space-y-4">
        <div class="border border-border p-4 rounded">
          <p class="text-on-surface-dim">Border with --color-border (subtle)</p>
        </div>
        <div class="border border-border-hover p-4 rounded">
          <p class="text-on-surface-dim">
            Border with --color-border-hover (on hover)
          </p>
        </div>
        <div class="divider my-4"></div>
        <p class="text-on-surface-dim">
          Divider with --color-divider above and below
        </p>
        <div class="divider my-4"></div>
      </div>
    </div>
  </section>

  <!-- How to Use Section -->
  <section class="card-elevated p-8">
    <h2 class="text-2xl font-bold text-primary mt-0 mb-4">How to Use</h2>
    <div class="space-y-4 text-on-surface-dim">
      <div>
        <p class="font-semibold text-on-surface mb-2">
          1. Update Colors in <code class="text-primary"
            >src/styles/global.css</code>
        </p>
        <p>
          Change any hex value in the @theme block to update your color palette
          globally.
        </p>
      </div>
      <div>
        <p class="font-semibold text-on-surface mb-2">
          2. Use CSS Variables in HTML
        </p>
        <p>
          Reference variables with <code class="text-primary"
            >var(--color-primary)</code
          > in inline styles or regular CSS.
        </p>
      </div>
      <div>
        <p class="font-semibold text-on-surface mb-2">
          3. Use Tailwind Classes
        </p>
        <p>
          Use utility classes like <code class="text-primary">bg-primary</code>, <code
            class="text-primary">text-primary</code
          >, <code class="text-primary">border-primary</code> directly in your HTML.
        </p>
      </div>
      <div>
        <p class="font-semibold text-on-surface mb-2">
          4. Use Component Classes
        </p>
        <p>
          Use pre-built classes like <code class="text-primary"
            >button-primary</code
          >, <code class="text-primary">card</code>, <code class="text-primary"
            >card-elevated</code
          > for consistency.
        </p>
      </div>
    </div>
  </section>
</Layout>

<style>
  code {
    background: var(--color-surface-dim);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: "Roboto Mono", monospace;
  }
</style>

<script>
  // Color palette mapping for light and dark themes
  const colorPalettes = {
    dark: {
      "--color-primary": "#00d4ff",
      "--color-primary-hover": "#00a8cc",
      "--color-primary-active": "#0099cc",
      "--color-on-primary": "#1a1a2e",
      "--color-secondary": "#667eea",
      "--color-secondary-hover": "#5568d3",
      "--color-secondary-active": "#4c51bf",
      "--color-on-secondary": "#ffffff",
      "--color-surface": "#1a1a2e",
      "--color-surface-dim": "#16213e",
      "--color-surface-bright": "#0f3460",
      "--color-error": "#ff4757",
      "--color-success": "#2ed573",
      "--color-warning": "#ffa502",
    },
    light: {
      "--color-primary": "#0066cc",
      "--color-primary-hover": "#0052a3",
      "--color-primary-active": "#003d7a",
      "--color-on-primary": "#ffffff",
      "--color-secondary": "#7c3aed",
      "--color-secondary-hover": "#6d28d9",
      "--color-secondary-active": "#5b21b6",
      "--color-on-secondary": "#ffffff",
      "--color-surface": "#ffffff",
      "--color-surface-dim": "#f3f4f6",
      "--color-surface-bright": "#e5e7eb",
      "--color-error": "#dc2626",
      "--color-success": "#16a34a",
      "--color-warning": "#ea580c",
    },
  };

  function updateColorValues() {
    const theme = (document.documentElement.getAttribute("data-theme") ||
      "dark") as keyof typeof colorPalettes;
    const palette = colorPalettes[theme];

    document.querySelectorAll(".color-value").forEach((el) => {
      const varName = el.getAttribute("data-var") as string;
      if (varName && palette[varName as keyof typeof palette]) {
        el.textContent = palette[varName as keyof typeof palette];
      }
    });
  }

  // Update on initial load
  updateColorValues();

  // Update when theme changes
  window.addEventListener("themechange", () => {
    updateColorValues();
  });

  // Also listen for attribute changes directly
  const observer = new MutationObserver(() => {
    updateColorValues();
  });
  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ["data-theme"],
  });
</script>
