---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import CardGrid from "../components/CardGrid.astro";
import CTA from "../components/CTA.astro";
import Testimonials from "../components/Testimonials.astro";
import FAQ from "../components/FAQ.astro";
import Gallery from "../components/Gallery.astro";
import About from "../components/About.astro";
import Menu from "../components/Menu.astro";
import Contact from "../components/Contact.astro";
import { featuresCardGrid, cardVariantsGrid } from "../data/cardGrid";
---

<Layout title="Daisies Nail Studio - Los Angeles" description="Experience sophisticated nail artistry at Daisies Nail Studio. Premium manicures, pedicures, and custom nail art in an elegant Los Angeles setting.">
  <Hero
    title="Sophisticated Nail Artistry"
    description="Experience elegance and pampering at Los Angeles' premier nail studio. Book your appointment today."
    primaryCta={{ label: "Book Now", href: "tel:+13239579879" }}
    secondaryCta={{ label: "View Services", href: "#services" }}
    fullViewport
  />

  <section id="services" class="py-16 md:py-12">
    <CardGrid config={cardVariantsGrid} />
  </section>

  <About />

  <Menu
    title="Our Services"
    description="Premium nail care tailored to you"
    isPreview
    previewLimit={6}
    previewCta={{ label: "View All Services", href: "#contact" }}
  />

  <Gallery
    title="Our Work"
    description="Explore our portfolio of stunning nail designs"
    showCategories
  />

  <Testimonials />

  <FAQ />

  <Contact showMap={true}/>

  <CTA
    title="Ready to Experience Luxury?"
    description="Book your appointment at Daisies Nail Studio today"
    primaryCta={{ label: "Call Now", href: "tel:+13239579879" }}
    secondaryCta={{ label: "Find Us", href: "#contact" }}
    variant="gradient"
  />
</Layout>
