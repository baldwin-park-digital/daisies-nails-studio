---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import heroNailsImg from "../assets/hero_nails.jpg";
import Card from "../components/Card.astro";
import CTA from "../components/CTA.astro";
import Testimonials from "../components/Testimonials.astro";
import FAQ from "../components/FAQ.astro";
import Gallery from "../components/Gallery.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import { siteConfig } from "../data/site";
---

<Layout
  title="Daisies Nails Studio"
  description={siteConfig.company.description}
>
  <Hero
    title="Treat Yourself to Perfect Nails"
    description="From classic manicures to dazzling designs, your nails will shine."
    primaryCta={{
      label: "BOOK MY APPOINTMENT",
      href: "https://daisiesnailsstudio.getrichbooking.com/",
      external: true,
    }}
    image={heroNailsImg}
    imageAlt="red painted nails background"
    fullViewport
  />

  <section id="services" class="py-16 md:py-24 surface">
    <div class="max-w-6xl mx-auto px-6 md:px-2">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          Our Services
        </h2>
        <p class="text-lg text-on-surface-dim">
          Experience luxury nail care and beauty services
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        <Card
          title="Manicures"
          description="Professional nail care, shaping, and polish application for beautiful hands."
        />

        <Card
          title="Pedicures"
          description="Relaxing foot treatments with exfoliation, massage, and perfect polish."
        />

        <Card
          title="Waxing & Tinting"
          description="Smooth, flawless skin with expert waxing and brow tinting services."
        />

        <Card
          title="Eyelash Extensions"
          description="Enhance your natural beauty with luxurious, long-lasting lash extensions."
        />
      </div>
      <div class="flex justify-center mt-10">
        <a
          href="/menu"
          class="button-primary px-8 py-4 text-lg font-bold rounded shadow-lg hover:scale-105 transition-transform"
          data-element="index-menu-link"
        >
          View Full Menu & Pricing
        </a>
      </div>
    </div>
  </section>

  <About />

  <Gallery
    title="Our Work"
    description="Explore our portfolio of beautiful projects."
  />
  <div class="flex justify-center mb-5">
    <a
      href="https://www.instagram.com/daisiesnailsstudio/"
      class="button px-8 py-4 text-lg font-bold rounded hover:scale-105 transition-transform"
      target="_blank"
      rel="noopener noreferrer"
      data-element="index-instagram-link"
    >
      View Our Full Gallery On Instagram
    </a>
  </div>

  <div class="flex justify-center items-center mb-5">
    <a
      href="https://daisiesnailsstudio.getrichbooking.com/"
      class="button-primary px-8 py-4 text-lg font-bold rounded shadow-lg hover:scale-105 transition-transform"
      target="_blank"
      rel="noopener noreferrer"
      data-element="index-book-link"
    >
      Get My Appointment Now
    </a>
  </div>
  <Testimonials />

  <FAQ />

  <Contact showMap={true} />

  <CTA
    title="Don't Miss Out!"
    description="Bookings fill up fast. Treat yourself to the ultimate care experience."
    primaryCta={{
      label: "Plan My Appointment",
      href: "https://daisiesnailsstudio.getrichbooking.com/",
      external: true,
    }}
    variant="gradient"
  />
</Layout>
