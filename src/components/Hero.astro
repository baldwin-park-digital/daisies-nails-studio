---
import { SITE_CONSTANTS } from '../data/constants';
import Button from './Button.astro';

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  primaryCta?: {
    label: string;
    href: string;
    external?: boolean;
  };
  secondaryCta?: {
    label: string;
    href: string;
    external?: boolean;
  };
  image?: string;
  imageAlt?: string;
  alignment?: 'left' | 'center';
  variant?: 'default' | 'gradient' | 'image-right';
  fullViewport?: boolean;
}

const {
  title,
  subtitle,
  description,
  primaryCta,
  secondaryCta,
  image,
  imageAlt = '',
  alignment = 'center',
  variant = 'default',
  fullViewport = false,
} = Astro.props;

const alignmentClasses = {
  left: 'text-left items-start',
  center: 'text-center items-center',
};

const isImageRight = variant === 'image-right';
---

<section class={`relative overflow-hidden ${fullViewport ? `min-h-[calc(100svh-${SITE_CONSTANTS.NAV_HEIGHT}px)] flex items-center -mt-[${SITE_CONSTANTS.NAV_HEIGHT}px]` : 'py-20 md:py-32'}`}>
  {variant === 'gradient' && (
    <div class="absolute inset-0 bg-linear-to-br from-primary/10 via-secondary/5 to-transparent pointer-events-none" aria-hidden="true"></div>
  )}
  
  <div class="max-w-6xl mx-auto px-6 md:px-2 relative z-10">
    <div class={`flex flex-col ${isImageRight ? 'md:flex-row md:items-center gap-12' : 'gap-8'}`}>
      {/* Content */}
      <div class={`flex flex-col ${alignmentClasses[alignment]} ${isImageRight ? 'md:w-1/2' : 'w-full'} gap-6`}>
        {subtitle && (
          <span class="text-sm md:text-base font-semibold uppercase tracking-wider text-primary">
            {subtitle}
          </span>
        )}
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          {title}
        </h1>
        
        {description && (
          <p class="text-lg md:text-xl text-on-surface-dim max-w-2xl">
            {description}
          </p>
        )}
        
        {(primaryCta || secondaryCta) && (
          <div class={`flex flex-wrap gap-4 ${alignment === 'center' ? 'justify-center' : ''}`}>
            {primaryCta && (
              <Button
                as="a"
                href={primaryCta.href}
                variant="primary"
                external={primaryCta.external}
                size="lg"
              >
                {primaryCta.label}
              </Button>
            )}
            
            {secondaryCta && (
              <Button
                as="a"
                href={secondaryCta.href}
                variant="outline"
                external={secondaryCta.external}
                size="lg"
              >
                {secondaryCta.label}
              </Button>
            )}
          </div>
        )}
      </div>
      
      {/* Image */}
      {image && isImageRight && (
        <div class="md:w-1/2">
          <img
            src={image}
            alt={imageAlt}
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      )}
      
      {image && !isImageRight && (
        <div class="w-full max-w-4xl mx-auto mt-8">
          <img
            src={image}
            alt={imageAlt}
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      )}
    </div>
  </div>
</section>
