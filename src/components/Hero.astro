---
import { SITE_CONSTANTS } from '../data/constants';
import Button from './Button.astro';

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  primaryCta?: {
    label: string;
    href: string;
    external?: boolean;
  };
  secondaryCta?: {
    label: string;
    href: string;
    external?: boolean;
  };
  image?: { src: string; width: number; height: number } | string;
  imageAlt?: string;
  alignment?: 'left' | 'center';
  variant?: 'default' | 'gradient' | 'image-right';
  fullViewport?: boolean;
}

const {
  title,
  subtitle,
  description,
  primaryCta,
  secondaryCta,
  image,
  imageAlt = '',
  alignment = 'center',
  variant = 'default',
  fullViewport = false,
} = Astro.props;

const alignmentClasses = {
  left: 'text-left items-start',
  center: 'text-center items-center',
};

const isImageRight = variant === 'image-right';
---

<section
  class={`relative overflow-hidden ${fullViewport ? 'flex items-center' : 'py-20 md:py-32'}`}
  style={fullViewport ? `margin-top: -${SITE_CONSTANTS.NAV_HEIGHT}px; height: calc(100svh - ${SITE_CONSTANTS.NAV_HEIGHT}px); min-height: calc(100svh - ${SITE_CONSTANTS.NAV_HEIGHT}px);` : ''}
>
  {variant === 'default' && image && (
    <>
      <img
        src={typeof image === 'string' ? image : image.src}
        alt={imageAlt}
        class="absolute inset-0 w-full h-full object-cover z-0"
        style="object-fit: cover; width: 100%; height: 100%;"
        aria-hidden="true"
        fetchpriority="high"
        width="1280"
        height="720"
      />
      <div class="absolute inset-0 bg-surface/70 pointer-events-none z-0" aria-hidden="true"></div>
    </>
  )}
  {variant === 'gradient' && (
    <div class="absolute inset-0 bg-linear-to-br from-primary/10 via-secondary/5 to-transparent pointer-events-none z-0" aria-hidden="true"></div>
  )}
  <div class="max-w-6xl mx-auto px-6 md:px-2 relative z-10">
    <div class={`flex flex-col ${isImageRight ? 'md:flex-row md:items-center gap-12' : 'gap-8'}`}>
      {/* Content */}
      <div class={`flex flex-col ${alignmentClasses[alignment]} ${isImageRight ? 'md:w-1/2' : 'w-full'} gap-6`}>
        {subtitle && (
          <span class="text-sm md:text-base font-semibold uppercase tracking-wider text-primary">
            {subtitle}
          </span>
        )}
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          {title}
        </h1>
        
        {description && (
          <p class="text-lg md:text-xl font-light max-w-2xl">
            {description}
          </p>
        )}
        
        {(primaryCta || secondaryCta) && (
          <div class={`flex flex-wrap gap-4 ${alignment === 'center' ? 'justify-center' : ''}`}>
            {primaryCta && (
              <Button
                as="a"
                href={primaryCta.href}
                variant="secondary"
                external={primaryCta.external}
                size="lg"
                data-element="hero-primary-cta"
              >
                {primaryCta.label}
              </Button>
            )}
            {secondaryCta && (
              <Button
                as="a"
                href={secondaryCta.href}
                variant="outline"
                external={secondaryCta.external}
                size="lg"
                data-element="hero-secondary-cta"
              >
                {secondaryCta.label}
              </Button>
            )}
          </div>
        )}
      </div>
      {/* Image - only show for image-right variant */}
      {image && isImageRight && (
        <div class="md:w-1/2">
          {typeof image === 'string' ? (
            <img
              src={image}
              alt={imageAlt}
              class="w-full h-auto rounded-lg shadow-lg"
              loading="lazy"
              width="800"
              height="600"
            />
          ) : (
            <img
              src={image.src}
              width={image.width}
              height={image.height}
              alt={imageAlt}
              class="w-full h-auto rounded-lg shadow-lg"
              loading="lazy"
            />
          )}
        </div>
      )}
    </div>
  </div>
</section>
