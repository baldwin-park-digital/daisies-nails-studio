---
import { contactInfo, fullContactData } from "../data/contact";

interface Props {
  title?: string;
  description?: string;
  variant?: "default" | "highlight";
  showMap?: boolean;
  mapHeight?: string;
}

const {
  title = contactInfo.title,
  description = contactInfo.description,
  variant = "default",
  showMap = false,
  mapHeight = "h-96",
} = Astro.props;

const config = fullContactData;

const variantClasses = {
  default: "bg-transparent",
  highlight: "bg-surface-dim rounded-lg",
};
---

<section class={`py-16 md:py-12 ${variantClasses[variant]}`} id="contact">
  <div class="max-w-7xl mx-auto px-6 md:px-2">
    <!-- Header -->
    <div class="mb-12 text-center">
      <h2 class="text-4xl md:text-3xl font-bold text-primary mb-4">
        {title}
      </h2>
      {description && (
        <p class="text-lg text-on-surface-dim max-w-2xl mx-auto">
          {description}
        </p>
      )}
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Map -->
      {showMap && config.mapEmbedUrl && (
        <div class="rounded-lg overflow-hidden">
          <iframe
            src={config.mapEmbedUrl}
            class={`w-full ${mapHeight}`}
            style="border:0;"
            loading="lazy"
            allowfullscreen="false"
            referrerpolicy="no-referrer-when-downgrade"
          >
          </iframe>
        </div>
      )}

      <!-- Contact Info -->
      <div class={config.mapEmbedUrl ? "" : "lg:col-span-2"}>
        <div class={config.mapEmbedUrl ? "space-y-8" : "lg:grid lg:grid-cols-2 lg:gap-12 space-y-8 lg:space-y-0"}>
          <!-- Address -->
          <div>
            <h3 class="text-sm font-semibold text-primary uppercase tracking-wide mb-2">
              Address
            </h3>
            <a
              href={`https://www.google.com/maps/search/${encodeURIComponent(config.contact?.address || "")}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-lg text-on-surface-dim hover:text-primary transition-colors"
            >
              {config.contact?.address}
            </a>
          </div>

          <!-- Phone -->
          <div>
            <h3 class="text-sm font-semibold text-primary uppercase tracking-wide mb-2">
              Phone
            </h3>
            <a
              href={`tel:${config.contact?.phone?.replace(/\D/g, "") || ""}`}
              class="text-lg text-on-surface-dim hover:text-primary transition-colors"
            >
              {config.contact?.phone}
            </a>
          </div>

          <!-- Email -->
          <div>
            <h3 class="text-sm font-semibold text-primary uppercase tracking-wide mb-2">
              Email
            </h3>
            <a
              href={`mailto:${config.contact?.email || ""}`}
              class="text-lg text-on-surface-dim hover:text-primary transition-colors"
            >
              {config.contact?.email}
            </a>
          </div>

          <!-- Hours -->
          {config.hours && config.hours.length > 0 && (
            <div>
              <h3 class="text-sm font-semibold text-primary uppercase tracking-wide mb-4">
                Hours
              </h3>
              <div class="space-y-2">
                {config.hours.map((hour) => (
                  <div class="flex justify-between text-on-surface-dim">
                    <span>{hour.day}</span>
                    <span class="font-semibold">{hour.time}</span>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Social Links -->
          {config.social && config.social.length > 0 && (
            <div>
              <h3 class="text-sm font-semibold text-primary uppercase tracking-wide mb-4">
                Follow Us
              </h3>
              <div class="flex gap-4">
                {config.social.map((social) => (
                  <a
                    href={social.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 flex items-center justify-center bg-primary/10 text-primary rounded-lg hover:bg-primary hover:text-on-primary transition-colors"
                    aria-label={social.label}
                  >
                    <span class="text-lg">{social.icon}</span>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>
