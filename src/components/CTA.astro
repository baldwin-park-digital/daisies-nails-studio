---
import Button from './Button.astro';

interface Props {
  title: string;
  description?: string;
  primaryCta?: {
    label: string;
    href: string;
    external?: boolean;
  };
  secondaryCta?: {
    label: string;
    href: string;
    external?: boolean;
  };
  variant?: 'default' | 'gradient' | 'primary' | 'secondary';
}

const {
  title,
  description,
  primaryCta,
  secondaryCta,
  variant = 'default',
} = Astro.props;

const variantClasses = {
  default: 'bg-surface-dim border border-primary/20',
  gradient: 'bg-gradient-to-br from-primary/10 via-secondary/5 to-transparent border border-primary/20',
  primary: 'bg-primary text-on-primary',
  secondary: 'bg-secondary text-on-secondary',
};
---

<section class={`${variantClasses[variant]} rounded-lg p-12 md:p-8 text-center mt-32`}>
  <h2 class="text-4xl md:text-2xl font-bold mt-0 mb-4">
    {title}
  </h2>
  
  {description && (
    <p class="text-lg md:text-base mb-6 max-w-2xl mx-auto opacity-90">
      {description}
    </p>
  )}
  
  {(primaryCta || secondaryCta) && (
    <div class="flex flex-wrap gap-4 justify-center">
      {primaryCta && (
        <Button
          as="a"
          href={primaryCta.href}
          variant={variant === 'primary' || variant === 'secondary' ? 'outline' : 'primary'}
          external={primaryCta.external}
          size="lg"
        >
          {primaryCta.label}
        </Button>
      )}
      
      {secondaryCta && (
        <Button
          as="a"
          href={secondaryCta.href}
          variant="outline"
          external={secondaryCta.external}
          size="lg"
        >
          {secondaryCta.label}
        </Button>
      )}
    </div>
  )}
</section>
