---
import { testimonials } from "../data/testimonials";
import type { Testimonial } from "../data/testimonials";

interface Props {
  title?: string;
  description?: string;
  items?: Testimonial[];
  columns?: "2" | "3";
  showRating?: boolean;
  variant?: "default" | "highlight";
}

const {
  title = "What Our Customers Say",
  description,
  items = testimonials,
  columns = "3",
  showRating = true,
  variant = "default",
} = Astro.props;

const columnClasses = {
  "2": "md:grid-cols-2",
  "3": "md:grid-cols-3",
};

const variantClasses = {
  default: "bg-transparent",
  highlight: "bg-surface-dim rounded-lg p-8 md:p-6",
};

// Helper to render stars
const renderStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, i) => i < rating ? "★" : "☆").join("");
};
---

<section class={`py-16 md:py-12 ${variantClasses[variant]}`}>
  <div class="max-w-6xl mx-auto px-6 md:px-2">
    {title && (
      <div class="mb-12 text-center">
        <h2 class="text-4xl md:text-3xl font-bold text-primary mb-4">
          {title}
        </h2>
        {description && (
          <p class="text-lg text-on-surface-dim max-w-2xl mx-auto">
            {description}
          </p>
        )}
      </div>
    )}

    <div class={`grid grid-cols-1 ${columnClasses[columns]} gap-8 md:gap-6`}>
      {items.map((testimonial) => (
        <div class="relative card p-6 flex flex-col">
          {/* Quote Icon */}
          <svg
            class="w-8 h-8 text-primary/20 mb-4"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>

          {/* Quote */}
          <div class="flex-1 mb-6">
            <p class="text-on-surface-dim leading-relaxed italic">
              "{testimonial.quote}"
            </p>
          </div>

          {/* Author */}
          <div class="flex items-center gap-4">
            {testimonial.image && (
              <img
                src={testimonial.image.src}
                width={testimonial.image.width}
                height={testimonial.image.height}
                alt={testimonial.name}
                class="w-12 h-12 rounded-full object-cover"
                loading="lazy"
              />
            )}
            <div class="flex-1">
              <div class="font-semibold text-primary">
                {testimonial.name}
              </div>
              {(testimonial.role || testimonial.company) && (
                <div class="text-sm text-on-surface-dim">
                  {testimonial.role}
                  {testimonial.role && testimonial.company && ", "}
                  {testimonial.company}
                </div>
              )}
              {showRating && testimonial.rating && (
                <div class="text-primary mt-1" aria-label={`${testimonial.rating} stars`}>
                  {renderStars(testimonial.rating)}
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
